<div class="exercises-item" data-id="<%= data.exercise['id'] %>">
    <div class="exercises-item-image" style="background-image:url(<%= data.exercise['image'] %>);"></div>
    <% if(locals.username && data.favorites.includes(data.exercise['id'])){ %>
        <a class="exercise-save-button" data-selected="true"><i class="fas fa-star exercise-save"></i></a>
    <% }else{ %>
        <a class="exercise-save-button" data-selected="false"><i class="far fa-star exercise-save"></i></a>
    <% } %>
    <div class="exercise-title"><%= data.exercise['title'] %></div>
    <div class="exercise-muscle">
        <img src="../images/muscle.png" alt="muscle">
        <span class="muscle-text"><%= data.exercise['muscle'] %></span>
    </div>
    <div class="exercise-equipment">
        <img src="../images/equipment.png" alt="equipment">
        <span class="equipment-text"><%= data.exercise['equipment'] %></span>
    </div>
    <div class="exercise-difficulty exercise-difficulty-<%= data.exercise['difficulty'] %>">
        <div class="difficulty-bar difficulty-bar-1 difficulty-bar-active"></div>
        <div class="difficulty-bar difficulty-bar-2 difficulty-bar-active"></div>
        <div class="difficulty-bar difficulty-bar-3"></div>
        <span class="difficulty-text"><%= data.exercise['difficulty'] %></span>
    </div>
</div>